<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="26sp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="20dp"
    android:layout_marginLeft="15dp"
    android:textColor="@color/black"
    android:layout_alignParentLeft="true"
    android:layout_toLeftOf="@id/close_event_button"
    android:id="@+id/event_name"/>
    <TextView
        android:id="@+id/close_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="@color/red"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignTop="@id/event_name"
        android:layout_alignBottom="@id/event_name"
        android:gravity="center_vertical"
        android:text="End Event"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="18sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_below="@id/close_event_button"
        android:textColor="@color/black"
        android:text="Attendees:"
        android:id="@+id/attendees_text"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/checkin_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/attendees_text"
        android:layout_above="@id/close_button"
        android:clipToPadding="false"></android.support.v7.widget.RecyclerView>


    <TextView
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="@color/red3"
        android:paddingBottom="10dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:paddingTop="8dp"
        android:text="Close"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:textSize="18sp"
        android:textStyle="bold" />
</RelativeLayout>