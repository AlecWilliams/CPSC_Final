<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroll_view">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/title_checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:text=""
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/memberCheckIn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_below="@id/title_checkin">

        <ImageView
            android:id="@+id/qr_code"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />
        <TextView
            android:id="@+id/email"
            android:text="test@text.com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/qr_code"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/adminCheckIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_checkin">

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:id="@+id/member_search"
            android:layout_marginTop="15dp"
            android:paddingRight="30dp"
            android:completionThreshold="1"
            android:hint="Ex: Ron Caballero"
            android:background="@drawable/edit_text_background"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clear"
            android:paddingTop="14dp"
            android:paddingBottom="14dp"
            android:layout_alignRight="@id/member_search"
            android:layout_alignTop="@id/member_search"
            android:layout_alignBottom="@id/member_search"
            android:src="@drawable/clear_button"
            android:tint="@color/gray0"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1"
            android:layout_below="@id/member_search"
            android:id="@+id/divider"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="or"
            android:textSize="23dp"
            android:background="@color/white"
            android:textColor="@color/black"
            android:layout_centerHorizontal="true"
            android:layout_alignTop="@id/divider"
            android:layout_marginTop="-19dp"/>

        <TextView
            android:id="@+id/qrText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@id/divider"
            android:text="Scan a member's qr code below."
            android:gravity="center"
            android:textSize="18sp" />

        <com.dlazaro66.qrcodereaderview.QRCodeReaderView
            android:id="@+id/qrdecoderview"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:layout_below="@id/qrText"
            android:layout_marginTop="15dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_1"
            android:layout_below="@id/qrdecoderview"
            android:id="@+id/divider2"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="12dp"/>
        <TextView
            android:id="@+id/userResultView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/divider2"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:text="Member Name:" />
        <TextView
            android:id="@+id/userResultEmail"
            android:layout_width="wrap_content"
            android:textSize="15sp"
            android:layout_height="wrap_content"
            android:layout_below="@id/userResultView"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/gray_1"
                android:layout_below="@id/adminCheckIn"
                android:id="@+id/divider3"
                android:layout_marginTop="15dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/divider3"
                android:layout_marginTop="18dp"
                android:id="@+id/checkin_buttons_holder"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/checkin_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="@color/colorAccent"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="8dp"
                    android:text="Check In"
                    android:textColor="@color/white"
                    android:layout_marginRight="15dp"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/event_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:backgroundTint="@color/colorAccent"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="8dp"
                    android:text="Event List"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="15dp"
        android:layout_alignParentBottom="true">
    <TextView
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_background"
        android:backgroundTint="@color/red3"
        android:paddingBottom="10dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:paddingTop="8dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Close"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textStyle="bold" />

            <TextView
                android:id="@+id/add_event_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Event"
                android:textColor="@color/colorAccent"
                android:textSize="15sp"
                android:layout_toLeftOf="@id/add_event"
                android:layout_alignTop="@id/add_event"
                android:gravity="center_vertical"
                android:paddingRight="7dp"
                android:textStyle="bold"/>
            <ImageView
                android:id="@+id/add_event"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_plus2"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/close_button"
                android:tint="@color/colorAccent"
                android:background="@drawable/plus_button"
                android:padding="4dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="9dp" />
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/event_check_in_holder"></FrameLayout>

</RelativeLayout>