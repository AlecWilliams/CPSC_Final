<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context="net.jsaistudios.cpsc.cpsc_app.MainActivity">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_above="@+id/bottom_nav_holder"
        android:layout_alignParentRight="true"
        android:visibility="gone"
        android:src="@drawable/ic_plus2"
        android:layout_margin="16dp" />

    <net.jsaistudios.cpsc.cpsc_app.NonSwipeableViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/main_pager"
        android:layout_below="@id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        android:layout_above="@id/bottom_nav_holder"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav_holder"
        android:id="@+id/autocomplete_frag_holder"></FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav_holder"
        android:layout_alignParentBottom="true">
        <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingTop="2dp"
        android:id="@+id/top_bar">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="23sp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/cpsctext"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:id="@+id/logo"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Check-In"
            android:id="@+id/checkin_button"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/logo"
            android:gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="23dp"
            android:textStyle="bold"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:id="@+id/logout_button"
            android:textColor="@color/white"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="23dp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/checkin_holder"></FrameLayout>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_holder"></FrameLayout>

</RelativeLayout>
